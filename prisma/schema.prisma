generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique // 유저의 이메일 (고유 값)
  name  String? // 유저 이름 (선택 사항)
  posts Post[] // 작성한 게시글 목록 (1:N 관계)
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String // 게시글 제목
  content   String? // 게시글 내용 (선택 사항)
  author    User?    @relation(fields: [authorId], references: [id]) // 작성자 (User 관계)
  authorId  Int? // 연결된 User의 ID (외래 키)
}